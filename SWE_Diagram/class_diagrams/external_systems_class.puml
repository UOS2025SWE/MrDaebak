@startuml
title "External Systems"

skinparam classAttributeIconSize 0
skinparam defaultFontName Arial
skinparam shadowing false
skinparam linetype ortho

interface "Gemini LLM API" as GeminiAPI <<external>> {
  + generate_content(model, contents): Response
  + generate_images(prompt, aspect_ratio): ImageResponse
  + edit_images(base_image, prompt): ImageResponse
}

interface "OpenAI Audio API" as OpenAIAPI <<external>> {
  + audio.transcriptions.create(file, model): TranscriptionResponse
  + audio.speech.create(input, voice): SpeechResponse
}

interface "Mock Payment Gateway" as PaymentGateway <<external>> {
  + process_payment(card_number, amount): PaymentResponse
  + verify_card(card_number): boolean
}

@enduml
