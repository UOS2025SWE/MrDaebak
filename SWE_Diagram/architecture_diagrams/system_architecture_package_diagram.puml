@startuml
title "Dinner Service System Architecture"

skinparam defaultFontName Arial
skinparam shadowing false
skinparam linetype ortho

package "Customer Web App" as CustomerApp {}
package "Staff Web App" as StaffApp {}
package "Admin Web App" as AdminApp {}
package "Order & Checkout Domain" as OrderDomain {}
package "Menu & Inventory Domain" as MenuDomain {}
package "Event & Discount Domain" as EventDomain {}
package "User & Auth Domain" as UserDomain {}
package "Staff Management Domain" as StaffMgmt {}
package "Voice & Realtime Domain" as VoiceDomain {}
package "Database Layer" as DatabaseLayer {}
package "AI Server" as AIServer {}

CustomerApp --> OrderDomain
CustomerApp --> MenuDomain
CustomerApp --> EventDomain
CustomerApp --> UserDomain
CustomerApp --> VoiceDomain

StaffApp --> OrderDomain
StaffApp --> UserDomain
StaffApp --> VoiceDomain

AdminApp --> OrderDomain
AdminApp --> MenuDomain
AdminApp --> EventDomain
AdminApp --> UserDomain
AdminApp --> StaffMgmt

OrderDomain --> MenuDomain
OrderDomain --> EventDomain
OrderDomain --> DatabaseLayer

MenuDomain --> DatabaseLayer

EventDomain --> DatabaseLayer

UserDomain --> DatabaseLayer

StaffMgmt --> DatabaseLayer

VoiceDomain --> DatabaseLayer
VoiceDomain ..> AIServer

@enduml
